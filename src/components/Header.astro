  sectionToClose.classList.add('hidden');
});



function search() {
  var searchInput = document.getElementById('searchInput') as HTMLInputElement;
  var searchResults = document.getElementById('searchResults');
  var searchText = searchInput.value.toLowerCase();

  // Nulstil tidligere resultater
  if (searchResults) {
    searchResults.innerHTML = '';
  }

  // Udfør søgning
  var items = ['Apple', 'Banana', 'Orange', 'Pineapple', 'Strawberry'];
  var matchingItems = items.filter(function(item) {
    return item.toLowerCase().indexOf(searchText) !== -1;
  });

  // Vis søgeresultater
  if (searchResults) {
    matchingItems.forEach(function(item) {
      var li = document.createElement('li');
      li.textContent = item;
      searchResults.appendChild(li);
    });
  }
}

</script>