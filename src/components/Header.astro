<style>

*:focus{
  outline: none;
}
header {
  /* position: fixed; */
  width: 100%;
  z-index: 20;
}
h2, h3, h4, p {
    color: var(--white);
    text-decoration: none;
}

.banner {
  background-color: var(--darkgreen);
  display: flex;
  flex-direction: column;
  padding: 2px 10px;
  align-items: center;
}
.banner .closeBanner {
  display: none;
}
.banner .levering {
  display: flex;
  flex-direction: row;
  gap: 5px;
  align-items: center;
}

.banner .truck {
  max-width: 40px;
  color: var(--white);
}

.banner .trustpilot {
  display: flex;
  flex-direction: row;
  gap: 5px;
  align-items: center;
}

.rating {
  text-align: center;
  font-size: 20px;
}

.rating > span:before {
  content: "\2605";
}

.full {
  color: gold;
}

.unset {
  color: white;
}
.banner .closeBanner {
  display: hidden;
}
@media (min-width: 768px) {
  .banner {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  .banner .closeBanner {
    display: unset;
  }
  .banner .levering {
    flex-direction: row;
    gap: 10px;
    align-items: center;
  }

  .banner .trustpilot {
    flex-direction: row;
    gap: 10px;
    align-items: center;
  }
}

/* mainheader */
.mainheader {
  background-color: var(--headerblue);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  padding: 10px;
}  
.mainheader .logo {
    width: 140px;
  }
.mainheader .search-container {
    display: none;
}
.mainheader .icons .favoritter {
  display: none;
}
@media (min-width: 768px) { 
  .mainheader .search-container {
    display: flex;
    align-items: center;
    position: relative;
  }

  .mainheader input[type="text"] {
    background-color: var(--white);
    border-radius: var(--globalBorderRadiusL);
    color: var(--colorPlaceholder);
    width: 100%;
    max-width: 400px;
    height: 36px;
    padding: 10px 40px 10px 10px; /* Justeret padding for at give plads til ikonet */
    border-style: none;
  }
  .mainheader .search-icon{
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    transition: color 0.3s ease-in-out;
    align-content: center;
  }

  .mainheader .search-icon i svg {
    color: var(--colorPlaceholder);
    width: 50%;
  }
  .mainheader .search-icon:hover i svg {
    color: black;
  }
  .mainheader .icons .favoritter {
  display: unset;
  }
}

.mainheader .icons {
  display: flex;
  flex-direction: row;
  gap: 10px;
  align-items: center;
}

.mainheader .icons svg {
  width: 28px;
  height: 28px;
}

/* burgermenu */    
.headerOpenBurger {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    flex-wrap: initial;
    }
.logoBurger {
    width: 80%;
}
.iconX {
    width: 500px;
