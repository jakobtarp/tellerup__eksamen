    align-items: center;
    padding: 5px;
    position: relative;
    /* ændre ************************************************* */
}
.navHeader input[type="text"] {
    background-color: var(--white);
    border-radius: var(--globalBorderRadiusL);
    color: var(--colorPlaceholder);
    width: 100%;
    max-width: 400px;
    height: 36px;
    padding: 10px 40px 10px 10px; /* Justeret padding for at give plads til ikonet */
    border-style: none;
  }
.navHeader .search-icon{
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    transition: color 0.3s ease-in-out;
  }
  .navHeader .search-icon i svg {
    width: 50%;
    color: var(--colorPlaceholder);
  }
  .navHeader .search-icon:hover i svg {
    color: black;
  }
.navHeader .navLeft, .undervisningsmateriale {
  display: none;
}
/* mobile */
@media (min-width: 768px) { 
  .navHeader {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    gap: 30px;
    padding-top: 10px;
    padding-bottom: 10px;
}
  .navHeader .search-container {
    display: none;
}
.navHeader h2 {
    font-weight: var(--fontBold);
    color: var(--black);
    text-decoration: none;
    font-size: clamp(10px, 1.2vw, 16px);
}
  .navHeader .navLeft {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    align-items: center;
    color: var(--black);
    text-decoration: none;
    list-style: none;
}
.navHeader .navLeft 
.kategori,
.forfattere,
.aldersgrupper,
.tilbud,
.undervisningsmateriale {
    display: flex;
    flex-direction: row;
    gap: 2px;
    align-items: center;
    text-decoration: none;
    width: fit-content;
    height:max-content;
}
.arrow {
    border-width: 0 3px 3px 0;
    display: inline-block;
    padding: 2px;
    border-radius: 1px;
    width: 30px;
}
.navLeft .arrow {
  width: 20px;
}
.navHeader .navRight {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  align-items: center;
  color: var(--black);
  text-decoration: none;
  padding-bottom: 20px;
  list-style: none;
}

button {
    text-decoration: none;
    border: unset;
    background-color: unset;
    cursor: pointer;
    line-height: 18px;
    font-size: clamp(10px, 1.2vw, 16px);
}
button :hover {
    text-decoration: underline;
}

/* Dropdown */
.dropdownContainer :before{
    display: none;
    height: 0px;
}
.dropdownContainer :after{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-auto-flow: column;
    column-gap: 20px;
    padding: 16px 0px;
    transition: 0.3s;
    height: 0px;
}


.dropdownContainer .dropdown-content {
  display: flex;
  flex-direction: column;
  position: absolute;
  background-color: var(--lighterblue);
  column-gap: 20px;
  padding: 16px 11px;
  width: 100%;
  z-index: 10;
  left: 0px;
  list-style: none;
}


.dropdown li a {
    display: block;
    color: var(--black);
    text-decoration: none;
    vertical-align: bottom;
    padding-bottom: 1px;
    margin-bottom: 8px;
    cursor: pointer;
    font-size: clamp(10px, 1.2vw, 16px);
}
.dropdown ::after, ::before {
  box-sizing: border-box;
}

