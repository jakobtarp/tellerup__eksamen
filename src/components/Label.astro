  .label {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffff;
    text-transform: uppercase;
    text-align: center;
    align-self: end;
  }

  [data-variant="nyhed"] {
    /* background: var(--green-tilbud); */
