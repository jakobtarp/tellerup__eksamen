---
import MainLayout from "../layouts/MainLayout.astro";
import MainHeader from "../components/MainHeader.astro";

import "../styles/global.css";
import "../styles/tokens.css";

---
<MainLayout title="Genrer" />
<MainHeader title="Genrer"></MainHeader>
  <section class="genre-section">
      <div class="genre-grid">
        <div class="genre-box" style="background-color: var(--darkvanilla);"><a href="kategori.astro"><h2>BØRNEBØGER</h2></a></div>
        <div class="genre-box" style="background-color: var(--vanilla);"><a href="kategori.astro"><h2>KRIMI</h2></a></div>
        <div class="genre-box" style="background-color: var(--royalblue);"><a href="kategori.astro"><h2 class="white">ROMANTIK</h2></a></div>
        <div class="genre-box" style="background-color: var(--lighterblue);"><a href="kategori.astro"><h2>SCI-FY</h2></a></div>
        <div class="genre-box" style="background-color: var(--royalblue);"><a href="kategori.astro"><h2 class="white">FANTASY</h2></a></div>
        <div class="genre-box" style="background-color: var(--lighterblue);"><a href="kategori.astro"><h2>UNGDOMSROMANER</h2></a></div>
        <div class="genre-box" style="background-color: var(--vanilla);"><a href="kategori.astro"><h2>YA-REALISME</h2></a></div>
        <div class="genre-box" style="background-color: var(--darkvanilla);"><a href="kategori.astro"><h2>SKØNLITTERATUR</h2></a></div>
        <div class="genre-box" style="background-color: var(--lighterblue);"><a href="kategori.astro"><h2>BIOGRAFIER</h2></a></div>
        <div class="genre-box" style="background-color: var(--royalblue);"><a href="kategori.astro"><h2 class="white">HOBBY</h2></a></div>
        <div class="genre-box" style="background-color: var(--darkvanilla);"><a href="kategori.astro"><h2>ROMANTIK</h2></a></div>
        <div class="genre-box" style="background-color: var(--royalblue);"><a href="kategori.astro"><h2 class="white">SCI-FY</h2></a></div>
      </div>
    </section>

<style>
    * {
      box-sizing: border-box;
    }
    .genre-section {
      text-align: center;
    }
    @media (min-width: 300px) {
      .genre-section {
        padding: 30px;
    }
    }
    @media (min-width: 400px) {
      .genre-section {
        padding: 70px;
    }
    }
    .genre-section h2 {
      font-weight: bold;
    }

    .genre-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      /* grid-gap: 20px; */
      margin-top: 20px;
    }

    .genre-box {
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #ccc;
      height: 150px;
      padding: 10px;
      transition: background-color 0.3s ease;
    }
    .genre-box:hover {
    background-color: #333;
    scale: 102%;
    }
    .genre-box a {
      text-decoration: none;
      color: black;
    }
    .genre-box a h2 {
        font-size: var(--fontSizeDesktopMd);
    }
    .white {
      color: white;
    }
  </style>
  